<div class="calculator-container min-h-screen bg-gray-50 p-4 sm:p-6 lg:p-8">
  <div class="mx-auto max-w-4xl space-y-6">

    <!-- Main Calculator Card -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200">
      <div class="p-4 sm:p-6">
        
        <!-- Input Section -->
        <div class="space-y-4">
          <div class="space-y-2">
            <label for="calculation-input" class="block text-sm font-medium text-gray-700">
              Agrega el precio total correcto
            </label>
            <div class="flex flex-col sm:flex-row gap-2">
              <input
                id="precioTotal"
                type="text"
                class="flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              />
              </div>
            </div>
          </div>

          <!-- Result Section -->
          <div class="space-y-2 mt-6">
            <label class="block text-sm font-medium text-gray-700">Precio unitario sin IVA:</label>
            <div class="p-3 bg-gray-100 rounded-md min-h-[2.5rem] flex items-center">
              <span id="result-display" class="text-lg font-mono text-gray-900">
                 <span id="precioUnitario">0.00</span>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<script>
  document.getElementById('precioTotal')?.addEventListener('input', function(this: HTMLInputElement) {
    const precioTotal = parseFloat(this.value);
    if (!isNaN(precioTotal)) {
      const total = precioTotal *100 / 1.13 * 100;
      document.getElementById('precioUnitario')!.textContent = total.toFixed(4);
    }
  });
</script>
